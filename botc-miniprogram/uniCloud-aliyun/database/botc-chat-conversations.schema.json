{
  "bsonType": "object",
  "description": "私聊会话表",
  "required": ["user1_id", "user2_id"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "会话ID"
    },
    "user1_id": {
      "bsonType": "string",
      "description": "用户1 ID",
      "foreignKey": "uni-id-users._id"
    },
    "user2_id": {
      "bsonType": "string",
      "description": "用户2 ID",
      "foreignKey": "uni-id-users._id"
    },
    "last_message": {
      "bsonType": "string",
      "description": "最后一条消息内容",
      "maxLength": 200
    },
    "last_message_time": {
      "bsonType": "timestamp",
      "description": "最后一条消息时间"
    },
    "user1_unread_count": {
      "bsonType": "int",
      "description": "用户1未读消息数",
      "defaultValue": 0,
      "minimum": 0
    },
    "user2_unread_count": {
      "bsonType": "int",
      "description": "用户2未读消息数",
      "defaultValue": 0,
      "minimum": 0
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    },
    "updated_at": {
      "bsonType": "timestamp",
      "description": "更新时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}

