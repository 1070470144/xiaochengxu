{
  "bsonType": "object",
  "required": ["user_id", "role_id"],
  "permission": {
    "read": "auth.uid == doc.user_id",
    "create": "auth.uid != null",
    "update": false,
    "delete": "auth.uid == doc.user_id"
  },
  "properties": {
    "_id": {
      "description": "ID"
    },
    "user_id": {
      "bsonType": "string",
      "title": "用户ID",
      "description": "点赞用户的ID",
      "forceDefaultValue": {
        "$env": "uid"
      }
    },
    "role_id": {
      "bsonType": "string",
      "title": "角色ID",
      "description": "被点赞的角色ID（wiki_entries._id）"
    },
    "created_at": {
      "bsonType": "timestamp",
      "title": "点赞时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}

