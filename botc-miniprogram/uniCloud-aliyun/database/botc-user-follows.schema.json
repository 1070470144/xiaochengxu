{
  "bsonType": "object",
  "description": "用户关注关系表",
  "required": ["follower_id", "following_id"],
  "permission": {
    "read": true,
    "create": true,
    "update": false,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "关注关系ID"
    },
    "follower_id": {
      "bsonType": "string",
      "description": "关注者ID（粉丝）",
      "foreignKey": "uni-id-users._id"
    },
    "following_id": {
      "bsonType": "string",
      "description": "被关注者ID",
      "foreignKey": "uni-id-users._id"
    },
    "status": {
      "bsonType": "int",
      "description": "状态：0-已取消 1-已关注",
      "enum": [0, 1],
      "defaultValue": 1
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "关注时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}

