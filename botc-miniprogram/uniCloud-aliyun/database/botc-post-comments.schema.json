{
  "bsonType": "object",
  "description": "帖子评论表",
  "required": ["post_id", "user_id", "content"],
  "permission": {
    "read": true,
    "create": "auth.uid != null",
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "评论ID"
    },
    "post_id": {
      "bsonType": "string",
      "description": "帖子ID",
      "foreignKey": "botc-posts._id"
    },
    "user_id": {
      "bsonType": "string",
      "description": "评论者ID",
      "foreignKey": "uni-id-users._id"
    },
    "reply_to_id": {
      "bsonType": "string",
      "description": "回复的评论ID（二级评论）",
      "foreignKey": "botc-post-comments._id"
    },
    "reply_to_user_id": {
      "bsonType": "string",
      "description": "回复的用户ID",
      "foreignKey": "uni-id-users._id"
    },
    "content": {
      "bsonType": "string",
      "description": "评论内容",
      "trim": "both",
      "minLength": 1,
      "maxLength": 500,
      "errorMessage": {
        "minLength": "评论内容不能为空",
        "maxLength": "评论内容不能超过500字"
      }
    },
    "like_count": {
      "bsonType": "int",
      "description": "点赞数",
      "defaultValue": 0
    },
    "status": {
      "bsonType": "int",
      "description": "状态：0-已删除 1-正常 2-审核中",
      "enum": [0, 1, 2],
      "defaultValue": 1
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "评论时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}

