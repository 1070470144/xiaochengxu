{
  "bsonType": "object",
  "description": "用户收藏表",
  "required": ["user_id", "target_type", "target_id"],
  "permission": {
    "read": true,
    "create": true,
    "update": false,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "收藏ID"
    },
    "user_id": {
      "bsonType": "string",
      "description": "用户ID",
      "foreignKey": "uni-id-users._id"
    },
    "target_type": {
      "bsonType": "string",
      "description": "目标类型",
      "enum": ["script", "post"]
    },
    "target_id": {
      "bsonType": "string",
      "description": "目标ID"
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "收藏时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}

