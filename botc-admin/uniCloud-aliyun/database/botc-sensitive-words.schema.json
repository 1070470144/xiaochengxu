{
  "bsonType": "object",
  "required": ["word", "type", "status"],
  "permission": {
    "read": true,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "word": {
      "bsonType": "string",
      "description": "敏感词",
      "trim": "both"
    },
    "type": {
      "bsonType": "string",
      "description": "类型：politics-政治敏感，violence-暴力血腥，porn-色情低俗，abuse-辱骂攻击，illegal-违法违规，other-其他",
      "enum": ["politics", "violence", "porn", "abuse", "illegal", "other"]
    },
    "level": {
      "bsonType": "int",
      "description": "敏感级别：1-轻度（提示），2-中度（审核），3-重度（拦截）",
      "enum": [1, 2, 3],
      "default": 2
    },
    "status": {
      "bsonType": "string",
      "description": "状态：enabled-启用，disabled-禁用",
      "enum": ["enabled", "disabled"],
      "default": "enabled"
    },
    "replacement": {
      "bsonType": "string",
      "description": "替换词（可选，用于自动替换）"
    },
    "remark": {
      "bsonType": "string",
      "description": "备注说明"
    },
    "created_at": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    },
    "updated_at": {
      "bsonType": "timestamp",
      "description": "更新时间"
    }
  }
}
